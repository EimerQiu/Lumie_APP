# Lumie Backend Production Environment Variables
# Copy this file to .env on the server and update with actual values

# App Configuration
APP_NAME=Lumie API
APP_VERSION=1.0.0
DEBUG=False

# MongoDB Configuration
# Replace with your production MongoDB URL
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=lumie_db

# JWT Authentication
# IMPORTANT: Generate a secure secret key for production
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Origins
# Update with your actual domains
CORS_ORIGINS=["https://yumo.org", "https://www.yumo.org", "http://localhost:3000"]
